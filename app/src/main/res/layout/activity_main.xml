<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.senior.g40.drivesafe.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_container">
    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/btn_crash_opt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/main_report_carcrash_opt"
                style="@style/btn_report"/>

            <Button
                android:id="@+id/btn_fire_opt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/main_report_fire_opt"
                style="@style/btn_report"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/btn_patient_opt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/main_report_patient_opt"
                style="@style/btn_report"/>

            <Button
                android:id="@+id/btn_animal_opt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/main_report_animal_opt"
                style="@style/btn_report"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/btn_brawl_opt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/main_report_brawl_opt"
                style="@style/btn_report"/>

            <Button
                android:id="@+id/btn_other_opt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/main_report_other_opt"
                style="@style/btn_report"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_gs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <Button
                android:id="@+id/btn_activeDrivesafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_drvactive" />

            <Button
                android:id="@+id/btn_userfalse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_userfalse" />

        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_activeDrivesafeService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_drvactiveserv"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
