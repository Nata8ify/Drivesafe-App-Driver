<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Report Incident"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
                <Button
                    android:id="@+id/btn_crash_opt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/main_report_carcrash_opt"
                    style="@style/btn_report"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btn_fire_opt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/main_report_fire_opt"
                    style="@style/btn_report"
                    android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
                <Button
                    android:id="@+id/btn_patient_opt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/main_report_patient_opt"
                    style="@style/btn_report"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btn_animal_opt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/main_report_animal_opt"
                    style="@style/btn_report"
                    android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
                <Button
                    android:id="@+id/btn_brawl_opt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/main_report_brawl_opt"
                    style="@style/btn_report"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btn_other_opt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/main_report_other_opt"
                    style="@style/btn_report"
                    android:textSize="20dp"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Hold button to report"
        android:textSize="18dp"
        android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/btn_userfalse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/main_userfalse"
            style="@style/btn_safe"
            android:visibility="gone"/>
</LinearLayout>
